<div class="table-wrapper-scroll-y my-custom-scrollbar">
<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Acquired year</th>
      <th>Model name</th>
      <th>Model number</th>
      <th>Serial number</th>
      <th>Location</th>
      <th>Manufacturer</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_equipments.each do |equipment| %>
      <tr>
        <td><%= link_to equipment.name , equipment %></td>
        <td><%= equipment.acquired_year %></td>
        <td><%= equipment.name_of_model %></td>
        <td><%= equipment.model_number %></td>
        <td><%= equipment.serial_number %></td>
        <td><%= equipment.location %></td>
        <td><%= equipment.manufacturer %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment), class: 'button is-small' %></td>
        <% if current_user.role=="admin" %>
          <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } , class: 'button is-danger is-small' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
