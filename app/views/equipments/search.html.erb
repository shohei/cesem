<%= render 'search_form' %>

<div class="table-wrapper-scroll-y my-custom-scrollbar">

<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Acquired year</th>
      <th>Model name</th>
      <th>Model number</th>
      <th>Serial number</th>
      <th>Location</th>
      <th>Manufacturer</th>
      <th>Country of origin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if not @search_equipments.nil? %>
    <% @search_equipments.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.acquired_year %></td>
        <td><%= equipment.name_of_model %></td>
        <td><%= equipment.model_number %></td>
        <td><%= equipment.serial_number %></td>
        <td><%= equipment.location %></td>
        <td><%= equipment.manufacturer %></td>
        <td><%= equipment.country_of_origin %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>

</table>
</div>

<% if not @search_equipments.nil? %>
<%= paginate @search_equipments  %>
<% end %>


