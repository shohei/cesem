<!DOCTYPE html>
<html>
  <head>
    <title>Cesem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <body>

      <div class="container" style="margin-top: 60px; margin-bottom: 40px;">
      <a class="is-size-4 is-pulled-right has-text-danger" href="/">CeSEM</a>
        <% if user_signed_in? %>
          <h2> <%= current_user.name %> is logged in.</h2> 
          <h4> email: <%= current_user.email %> </h4>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete , class: 'button is-danger' %> 
        <% end %>
  
        <%= yield %>
  
      </div>

    </body>
</html>
